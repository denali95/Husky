<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ambient_mode_text"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/miserable"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/neutral"
        android:layout_alignTop="@+id/unhappy"
        android:background="@color/ambient_mode_text"
        android:scaleType="fitXY"
        android:src="@drawable/face_miserable" />

    <ImageButton
        android:id="@+id/unhappy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/happy"
        android:layout_below="@+id/happy"
        android:layout_marginTop="49dp"
        android:background="@color/ambient_mode_text"
        android:scaleType="fitXY"
        android:src="@drawable/face_unhappy" />

    <ImageButton
        android:id="@+id/neutral"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/happy"
        android:layout_marginStart="38dp"
        android:layout_toEndOf="@+id/happy"
        android:background="@color/ambient_mode_text"
        android:scaleType="fitXY"
        android:src="@drawable/face_neutral" />

    <ImageButton
        android:id="@+id/happy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:background="@color/ambient_mode_text"
        android:scaleType="fitXY"
        android:src="@drawable/face_happy" />
</RelativeLayout>